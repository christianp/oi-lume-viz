---
layout: layout/base.njk
---

<h1>{{ title }}</h1>

{% if examples | length > 1 %}
<ol>
{% for example in examples %}
	<li><a href="#example-{{ loop.index }}">{% if example.title %}{{ example.title }}{% else %}Example {{ loop.index }}{% endif %}</a></li>
{% endfor %}
</ol>
{% endif %}

{{ content | safe }}

{% for example in examples %}
	<section id="example-{{ loop.index }}">
		<h2>{% if example.title %}{{ example.title }}{% else %}Example {% if examples | length > 1 %}{{ loop.index }}{% endif %}{% endif %}</h2>
		{% if example.description %}
		<p>{{ example.description | md | safe }}</p>
		{% endif %}
		{% if example.config %}
		{% comp 'oi.' + component, { "config": example.config } %}{% endcomp %}

		<p>This example was made with config:</p>

		<pre><code class="hljs language-yaml">{{ example.config | yaml }}</code></pre>
		{% endif %}
	</section>
{% endfor %}
